<div class="container">
  <h3 class="pt-5 text-center">Choose a Cocktail!</h3>
  <div class="d-flex flex-wrap justify-content-center align-items-center text-center my-5">
  <% @cocktails.each do |cocktail| %>
      <div class="card-product mx-5 my-5">
        <!-- <img src="https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&auto=format&fit=crop&w=334&q=80" style= "width:200px"> -->
        <%= cl_image_tag cocktail.photo, width: 500 %>
        <div class="card-product-infos">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <p><%= link_to "Remove Cocktail", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" },class:"text-danger" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
